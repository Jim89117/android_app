<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_gravity="center_vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:src="@drawable/sun"
            android:layout_marginLeft="250dp"
            />
        <Button
            android:id="@+id/welcome1"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="140dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/txt_welcome"
            android:text="＄400元"
            android:textColor="#fff"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/pg1_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Save Energy,Save Money"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/pg1_tv_2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pg1_tv_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Browse through enthusiasts and find the right matches for you"
            android:textColor="#000"
            android:textSize="20sp" />

    </RelativeLayout>
</FrameLayout>